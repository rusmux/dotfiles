{
    // Workbench
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "One Dark Pro Night Flat",
    "workbench.iconTheme": "vscode-jetbrains-icon-theme-2023-dark",
    "workbench.colorCustomizations": {
        "gitDecoration.untrackedResourceForeground": "#e06c75",
    },
    "workbench.tree.indent": 16,
    "workbench.localHistory.maxFileSize": 512, // KB
    "workbench.editorLargeFileConfirmation": 32, // MB
    "workbench.editor.wrapTabs": true,
    // Explorer
    "explorer.autoReveal": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.decorations.badges": false,
    // Editor
    "editor.fontSize": 13,
    "editor.fontFamily": "JetbrainsMono Nerd Font Mono",
    "editor.minimap.enabled": false,
    "editor.accessibilitySupport": "off",
    "editor.tabCompletion": "on",
    "editor.rulers": [
        {
            "column": 120
        }
    ],
    "diffEditor.ignoreTrimWhitespace": false,
    // Terminal
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.scrollback": 2000,
    "terminal.integrated.stickyScroll.enabled": true,
    "terminal.integrated.tabs.title": "${cwdFolder}",
    "terminal.integrated.tabs.description": "${process}${separator}${task}${separator}${local}",
    "terminal.integrated.env.osx": {
        "Q_NEW_SESSION": "1"
    },
    // Files
    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/.idea": true,
        // Python
        "**/__pycache__": true,
        // Jupyter
        "**/.ipynb_checkpoints": true,
        "**/.virtual_documents": true,
        // Python tools
        "**/.ruff_cache": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/*.coverage*": true,
    },
    "files.watcherExclude": {
        "**/.idea": true,
        // Python
        "**/__pycache__": true,
        "**/.venv": true,
        // Jupyter
        "**/.ipynb_checkpoints": true,
        "**/.virtual_documents": true,
        // Python tools
        "**/.ruff_cache": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/*.coverage*": true,
    },
    // Search
    "search.exclude": {
        "**/.venv": true
    },
    // Python
    "ruff.nativeServer": true,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        },
    },
    "jupyter.disableJupyterAutoStart": true,
    "jupyter.askForKernelRestart": false,
    // K8s
    "vscode-kubernetes.minikube-path-mac": "/opt/homebrew/bin/minikube",
    "vscode-kubernetes.kubectl-path-mac": "/opt/homebrew/bin/kubectl",
    "vscode-kubernetes.helm-path-mac": "/opt/homebrew/bin/helm",
    "vs-kubernetes": {
        "vs-kubernetes.crd-code-completion": "enabled",
        "vs-kubernetes.ignore-recommendations": true
    },
    // Git
    "git.openRepositoryInParentFolders": "never",
    "git.untrackedChanges": "separate",
    "git.autofetch": true,
    "git.autofetchPeriod": 300,
    "gitlens.telemetry.enabled": false,
    "gitlens.currentLine.enabled": false,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false,
    },
    // Other
    "security.workspace.trust.untrustedFiles": "open",
    "telemetry.telemetryLevel": "off",
    "redhat.telemetry.enabled": false,
    "window.restoreFullscreen": true,
    "cSpell.language": "en,ru",
    "cSpell.spellCheckDelayMs": 100,
    "cSpell.userWords": [
        "expaserve"
    ],
    "path-intellisense.showHiddenFiles": true,
    "path-intellisense.autoTriggerNextSuggestion": true,
    "errorLens.onSave": true,
    "errorLens.excludeBySource": [
        "cSpell"
    ],
    "errorLens.messageTemplate": "$code: $message",
    "shellcheck.executablePath": "/opt/homebrew/bin/shellcheck",
    "shellcheck.ignorePatterns": {
        "**/*.zsh": false,
        "**/*.zshrc": false,
        "**/zshrc": false,
        "**/*.zprofile": false,
        "**/zprofile": false,
        "**/*.zshenv": false,
        "**/zshenv": false
    },
    "shellcheck.run": "onSave",
    "shellcheck.customArgs": [
        "-x"
    ],
    "yaml.format.printWidth": 120,
}
